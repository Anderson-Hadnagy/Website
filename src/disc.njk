  let answered = 0;

  for (let value of formData.values()) {
    scores[value]++;
    answered++;
  }

  if (answered < 25) {
    alert(`Kérlek válaszold meg az összes kérdést! (Jelenleg: ${answered} / 25)`);
    return;
  }

  const queryString = `?D=${scores.D}&I=${scores.I}&S=${scores.S}&C=${scores.C}`;
  
  /** * GITHUB FIX: Use Nunjucks to inject the pathPrefix-aware URL.
